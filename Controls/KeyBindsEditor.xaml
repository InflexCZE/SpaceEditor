<UserControl x:Class="SpaceEditor.Controls.KeyBindsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <ComboBox
            Name="PresetsCombo"
            DisplayMemberPath="Key"
            SelectedValuePath="Key"
            SelectionChanged="OnPresetChanged"
            IsSynchronizedWithCurrentItem="True"
            DropDownClosed="OnPresetChanged2"
            ItemsSource="{Binding Path=PresetsView, RelativeSource={RelativeSource AncestorType=UserControl}}"
            />

        <TextBox
            Grid.Row="2"
            Grid.Column="0"
            Name="SelectedPresetName"
            AcceptsReturn="False"
            TextWrapping="NoWrap"
            VerticalAlignment="Center"
            Padding="2"
            Text="{Binding Path=Key, UpdateSourceTrigger=PropertyChanged}"
            />
        
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Name="ActionButtons"
            >

            <Button
                Content="Save"
                Name="SaveButton"
                Click="OnSaveClicked"
            />

            <Button
                Content="Remove"
                Name="RemoveButton"
                Click="OnRemoveClicked"
            />
            
            <Button
                Content="Apply to Game"
                Name="ApplyButton"
                Click="OnApplyClicked"
                />

        </StackPanel>

        <local:InputsEditor
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            x:Name="InputsEditorControl"
            />
        
    </Grid>
</UserControl>
